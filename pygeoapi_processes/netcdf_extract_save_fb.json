{
    "version": "0.1.0",
    "id": "netcdf-extract-save-fb",
    "use_case": "NIVA Ferrybox Scripts",
    "title": {
        "en": "Color Fantasy Ferrybox data from Oslo-Kiel  (WIP)"
    },
    "description": {
        "en": "Extraction of daily Ferrybox data from the Color Fantasy. Once every minute, the FerryBox system measures at a depth of four to seven metres along the fixed route of a vessel. This amounts to about one measurement every 500 metres."
    },
    "jobControlOptions": ["sync-execute", "async-execute"],
    "keywords": ["AquaINFRA", "NIVA use case", "Ferrybox"],
    "links": [{
        "type": "text/html",
        "rel": "about",
        "title": "GitHub repo of NIVA AquaINFRA tools",
        "href": "https://github.com/NIVANorge/niva-aquainfra",
        "hreflang": "en-US"
    }],
    "inputs": {
        "url_thredds": {
            "title": "https://thredds.niva.no/thredds/catalog/subcatalogs/ferryboxes.html?dataset=no.niva:af11ba01-dfe3-4432-b9d2-4e6fd10714db",
            "description": "NIVA thredds data acces",
            "schema": {
                "type": "string"
            },
            "minOccurs": 1,
            "maxOccurs": 1,
            "keywords": []
        },
        "start_date": {
            "title": "2023-01-01",
            "description": "Color Fantasy Start date for data sampling. format yyyy-mm-dd",
            "schema": {
                "type": "string"
            },
            "minOccurs": 1,
            "maxOccurs": 1,
            "keywords": []
        },
        "end_date": {
            "title": "Ongoing",
            "description": "Color Fantasy continously collects data; format yyyy-mm-dd",
            "schema": {
                "type": "string"
            },
            "minOccurs": 1,
            "maxOccurs": 1,
            "keywords": []
        },
        "parameters": {
            "title": "Parameters",
            "description": "Available quality controlled parameters are temperature, salinity, oxygen_sat, chlorophyll, turbidity, fdom.",
            "schema": {
                "type": "string"
            },
            "minOccurs": 1,
            "maxOccurs": 100,
            "keywords": []
        },
        "study_area_bbox": {
            "title": "Bounding Box",
            "description": "Bounding box for entire Ferrybox sampling transect. {\"bbox\":Longitude min = 9.90271, Longitude max = 11.946572, Latitude min = 54.377027, Latitude max = 59.90903}.",
            "schema": {
                "type": "string"
            },
            "minOccurs": 0,
            "maxOccurs": 1,
            "keywords": []
        }
    },
    "outputs": {
        "csv_results" : {
            "title": ".CSV (Comma seperated)",
            "description": "TDownloads",
            "schema": {
                "type": "object",
                "contentMediaType": "application/json"
            }
        }
    },
    "example": {
        "inputs": {
            "url_thredds": "https://thredds.niva.no/thredds/dodsC/datasets/nrt/color_fantasy.nc",
            "start_date": "2023-01-01",
            "end_date": "2023-12-31",
            "parameters": ["temperature", "salinity", "oxygen_sat", "chlorophyll", "turbidity", "fdom"],
            "study_area_bbox": {"bbox": [42.08333, 8.15250, 50.24500, 29.73583]}
        }
    }
}

